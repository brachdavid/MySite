@inject NavigationManager NavigationManager

<section id="contactMe" aria-label="Banner vyzívající návštěvníky stránek k tomu, aby kontaktovali Davida Břacha nebo si alespoň prohlédli jeho dosavadní práci" class="pb-5">
    <div class="container">
        <div class="row p-4 pe-lg-0 align-items-center rounded-4 border shadow-lg bg-white">
            <div class="col-md-6 col-lg-7 p-3 p-lg-5">
                <h2 class="display-4 fw-bold lh-1 text-body-emphasis">Chcete atraktivní <span class="text-primary">webovky?</span></h2>
                <p class="lead">Vytvořím zbrusu nové webové stránky nebo provedu důkladnou revizi těch stávajících a zároveň vdechnu trochu života obsahu, aby zase prodával.</p>
                <div class="d-grid gap-2 d-lg-flex justify-content-lg-start mb-4 mb-lg-3">
                    <a href="/kontakt" type="button" class="btn btn-primary btn-lg px-4 me-md-2 fw-bold" @onclick="Refresh">Napište mi</a>
                    <a href="/reference" type="button" class="btn btn-outline-secondary btn-lg px-4" @onclick="Refresh">Reference</a>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <img src="images/brand/contactMe.webp" alt="David Břach" class="img-fluid">
            </div>
        </div>
    </div>
</section>
@code {
    private void Refresh()
    {
        NavigationManager.NavigateTo(NavigationManager.Uri, forceLoad: true);
    }
}