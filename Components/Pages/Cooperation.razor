@page "/prubeh-spoluprace"

<PageTitle>Průběh spolupráce | David Břach</PageTitle>
<HeadContent>
    <meta name="robots" content="index, follow" />
    <meta name="description" content="Chcete vědět, jak probíhá spolupráce při tvorbě webových stránek? Seznámím vás s celým procesem – od prvního kontaktu až po spuštění webu." />

    <!-- Open Graph Metadata -->
    <meta property="og:title" content="Průběh spolupráce | David Břach" />
    <meta property="og:description" content="Jak probíhá spolupráce na vývoji webových stránek? Jasný a efektivní proces od prvního kontaktu po spuštění webu. Transparentní komunikace, testování a dlouhodobá podpora." />
    <meta property="og:type" content="article" />
    <meta property="og:url" content="https://davidbrach.cz/prubeh-spoluprace" />
    <meta property="og:image" content="https://davidbrach.cz/images/brand/coding.webp" />
    <meta property="og:site_name" content="David Břach | Vývoj webových aplikací" />
    <meta property="og:locale" content="cs_CZ" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Průběh spolupráce | David Břach" />
    <meta name="twitter:description" content="Jak vypadá vývoj webových stránek krok za krokem? Od prvního kontaktu až po spuštění webu – přehledný a efektivní proces." />
    <meta name="twitter:image" content="https://davidbrach.cz/images/brand/coding.webp" />

    <link rel="canonical" href="https://davidbrach.cz/prubeh-spoluprace">
</HeadContent>

<section id="cooperation" style="padding-top: 100px;" class="pb-4">
    <div class="container text-center col-md-10 col-lg-12 col-xl-10 justify-content-center">
        <h2 class="fs-1 text-uppercase fw-bold px-2">Průběh <span class="text-primary">spolupráce</span></h2>
        <p class="lead mb-5 text-body-secondary">
            Přemýšlíte, jak bude naše spolupráce vypadat? Proces je navržen tak, aby byl co nejjednodušší a zároveň efektivní. Zakládám si na <span class="fw-bold text-primary">transparentní komunikaci a důkladné přípravě</span>, abych zajistil, že výsledek bude přesně odpovídat vašim představám.
        </p>
        <div class="container col-xl-10">
        <div class="row">
            <div class="col-lg-5 col-xxl-6 mb-4 mb-lg-0">
                <!-- Sticky container for the image -->
                <div class="sticky-container mb-4">
                        <img src="images/brand/cooperation.webp" alt="David Břach" class="img-fluid rounded-4 shadow-lg" loading="lazy" />
                </div>
            </div>
                <div class="col-lg-7 col-xxl-6">
                    @foreach (var step in CooperationSteps)
                    {
                        <div class="flip-card mb-4" style="--card-index: @(CooperationSteps.IndexOf(step) + 1)">
                            <div class="flip-card-inner">
                                <div class="flip-card-front bg-outline-secondary p-4 d-flex align-items-center justify-content-center rounded-4">
                                    <h3 class="fw-bold text-secondary m-0">@step.Order. @step.StepName</h3>
                                </div>
                                <div class="flip-card-back px-sm-5 bg-outline-secondary d-flex align-items-center justify-content-center rounded-4">
                                    <p class="m-0 lead">@step.StepDescription</p>
                                </div>
                            </div>
                        </div>
                    }
            </div>
        </div>
        </div>
    </div>
</section>

@code {
    // Data model pro kroky spolupráce
    private List<CooperationStep> CooperationSteps { get; set; } = new()
    {
        new CooperationStep { Order = 1, StepName = "Prvotní kontakt", StepDescription = "Každá spolupráce začíná úvodním kontaktem. Můžete mě oslovit telefonicky, e-mailem, přes WhatsApp, Messenger, LinkedIn, kontaktní formulář nebo rezervační systém."},
        new CooperationStep { Order = 2, StepName = "Analýza vašeho záměru", StepDescription = "Abych dokázal vytvořit personalizované stránky, musím důkladně navnímat klientovy představy. Pokusím se zároveň vystihnout charakter podnikání, správnou atmosféru a cílovou skupinu."},
        new CooperationStep { Order = 3, StepName = "Návrh řešení a konzultace", StepDescription = "Jakmile získám všechny podstatné informace, sestavím základní koncept webovek. Klient dostane příležitost vznést námitky, což výrazně uspíší následnou realizaci projektu."},
        new CooperationStep { Order = 4, StepName = "Realizace projektu", StepDescription = "Schválený koncept vzápětí začínám realizovat. Neexistuje žádný univerzální výpočet časové náročnosti, přibližný odhad poskytuji z kapacitních důvodů zcela individuálně."},
        new CooperationStep { Order = 5, StepName = "Úpravy, testování a ladění", StepDescription = "Hotové stránky podrobím vícestupňové kontrole a důkladnému testování. Klient dostane příležitost zhodnotit výsledný produkt a navrhnout poslední úpravy před nasazením."},
        new CooperationStep { Order = 6, StepName = "Předání a spuštění projektu", StepDescription = "Postarám se o hladké spuštění webu, zajistím správnou konfiguraci, předám klientovi všechny přístupové údaje a vysvětlím mu základní ovládání stránek."},
        new CooperationStep { Order = 7, StepName = "Následná poporodní péče", StepDescription = "Pozor, umístěním webových stránek na internet to nekončí! Nabízím dlouhodobou podporu – aktualizace, správu obsahu a drobné úpravy dle klientových potřeb."},
    };
}
